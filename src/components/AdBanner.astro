<style>
  .ad-banner-wrapper {
    width: 100%;
    background: var(--bg-primary);
    transition: background 0.3s ease;
  }

  .ad-banner-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 2rem 0;
    text-align: center;
  }
  
  .adsbygoogle {
    margin: 1rem 0;
