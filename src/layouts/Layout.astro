---
import { t } from '../i18n/translations';
import type { Language } from '../i18n/index';
import Footer from '../components/Footer.astro';
import '../styles/global-theme.css';

export interface Props {
  title?: string;
  lang?: Language;
  canonical?: string;
}

const { title, lang = 'en', canonical } = Astro.props;
const currentLang = lang;
const translate = t(currentLang);

const pageTitle = title || translate('page.title');
const gaId = import.meta.env.PUBLIC_GA_ID || 'G-WG4ZKYY1L1';

// 语言到HTML lang属性的映射
const langMapping = {
  'zh-cn': 'zh-CN',
  'zh-tw': 'zh-TW',
  'en': 'en',
  'ja': 'ja'
} as const;
---

<!doctype html>
<html lang={langMapping[currentLang]}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={translate('page.description')} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    {canonical && <link rel="canonical" href={canonical} />}
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro:wght@400;600&family=Fira+Code:wght@400;500&display=swap" rel="stylesheet" />
    <title>{pageTitle}</title>
    
    {gaId && (
      <Fragment>
        <script async src={`https://www.googletagmanager.com/gtag/js?id=${gaId}`}></script>
        <script is:inline define:vars={{ gaId }}>
          window.dataLayer = window.dataLayer || [];
          function gtag(){dataLayer.push(arguments);}
          gtag('js', new Date());
          gtag('config', gaId);
        </script>
      </Fragment>
    )}
  </head>
  <body class="transition-colors duration-200 min-h-screen flex flex-col">
    <main class="flex-1">
      <slot />
    </main>
    <Footer lang={currentLang} />
    <script>
      // 主题切换功能
      function initTheme() {
        const theme = localStorage.getItem('theme') || 'light';
        document.documentElement.classList.toggle('dark', theme === 'dark');
      }

      function toggleTheme() {
        const isDark = document.documentElement.classList.contains('dark');
        const newTheme = isDark ? 'light' : 'dark';
        document.documentElement.classList.toggle('dark', newTheme === 'dark');
        localStorage.setItem('theme', newTheme);
      }

      // 风格切换 + 字体按需加载
      const styleFonts: Record<string, string> = {
        minimal: 'family=Cormorant+Garamond:wght@400;500;600;700',
        neon: 'family=Archivo+Black&family=Space+Grotesk:wght@400;500;600;700',
        glassmorphism: 'family=Outfit:wght@400;500;600;700&family=Rajdhani:wght@400;500;600;700',
        retro: 'family=VT323',
      };
      const loadedFonts = new Set<string>();

      function loadStyleFonts(style: string) {
        if (loadedFonts.has(style) || !styleFonts[style]) return;
        loadedFonts.add(style);
        const link = document.createElement('link');
        link.rel = 'stylesheet';
        link.href = `https://fonts.googleapis.com/css2?${styleFonts[style]}&display=swap`;
        document.head.appendChild(link);
      }

      function initStyle() {
        const savedStyle = localStorage.getItem('formatter-style') || 'minimal';
        document.body.setAttribute('data-style', savedStyle);
        loadStyleFonts(savedStyle);
      }

      function switchStyle(style: string) {
        document.body.setAttribute('data-style', style);
        localStorage.setItem('formatter-style', style);
        loadStyleFonts(style);
        window.dispatchEvent(new CustomEvent('styleChanged', { detail: { style } }));
      }

      initTheme();
      initStyle();

      // 全局函数
      window.toggleTheme = toggleTheme;
      window.switchGlobalStyle = switchStyle;
    </script>
  </body>
</html> 