---
import { getCollection } from 'astro:content';
import BlogLayout from '../../../components/BlogLayout.astro';
import { languages, defaultLang } from '../../../i18n/index';
import type { Language } from '../../../i18n/index';

export async function getStaticPaths() {
  const allPosts = await getCollection('blog');

  return allPosts.map((post) => {
    const [lang, ...rest] = post.id.split('/');
    const slug = rest.join('/').replace('.md', '');

    return {
      params: {
        lang: lang === defaultLang ? undefined : lang,
        slug,
      },
      props: { post, lang: lang as Language },
    };
  });
}

const { post, lang } = Astro.props;
const { Content } = await post.render();
---

<BlogLayout
  title={post.data.title}
  description={post.data.description}
  pubDate={post.data.pubDate}
  author={post.data.author}
  lang={lang}
>
  <Content />
</BlogLayout>
